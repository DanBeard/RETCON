# Default config template
[retcon]

  name = Example

  # The mode to run in. Options are
  #   transport = headless transport. No Meshchat or other UI. WiFi used only for mesh.
  #   client    = Meshchat UI accessible via Bluetooth PAN. WiFi used for mesh networking.
  mode = transport
  annouce_every = 3600  # every 60 minutes

  [[wifi]]
    # WiFi is used for batman-adv mesh networking between RETCON nodes.
    # User access is via Bluetooth PAN (configured in bluetooth_pan plugin).

    # ESSID prefix and PSK for batman-adv mesh network
    prefix = "RT-DEFAULT-"
    psk = "retcon123"

    freq = 2462
    client_iface = 'wlan0'
  
#optional hardcoded interfaces section. Any interfaces you define here will be used as-is
[interfaces]
 # TCP/IP interface to the Dublin Hub
  [[RNS Testnet Dublin]]
    type = TCPClientInterface
    enabled = yes
    target_host = dublin.connect.reticulum.network
    target_port = 4965

# TCP/IP interface to the BetweenTheBorders Hub (community-provided)
  [[RNS Testnet BetweenTheBorders]]
    type = TCPClientInterface
    enabled = yes
    target_host = reticulum.betweentheborders.com
    target_port = 4242

# Interface to I2P Hub A
  [[RNS Testnet I2P Hub A]]
    type = I2PInterface
    enabled = yes
    peers = g3br23bvx3lq5uddcsjii74xgmn6y5q325ovrkq2zw2wbzbqgbuq.b32.i2p


# Retcon Config plugins. Each of these will have a chance to modify the config
[retcon_plugins]

  [[batman_mesh]]  # batman-adv Layer 2 mesh over ad-hoc WiFi
    # Optional ESSID override (defaults to prefix + "-MESH")
    # essid = "RETCON-MESH"

  [[bluetooth_pan]]  # Bluetooth PAN for phone/tablet connectivity
    # Optional name override (defaults to wifi prefix + "-BT")
    # name = "RETCON-BT"

  [[usb_autodetect]]
    [[[rnode]]]
      
      #port = /dev/ttyACM0 # Not needed since we auto-detect 
      frequency = 914875000
      bandwidth = 125000
      txpower = 14
      spreadingfactor = 8
      codingrate = 5

    # Both RNode and meshtastic can work at the same time.
    # However the meshtastic discovery method puts the RNode in a bad state  
    # This can be fixed by simply rebooting the Rnode after discovery. But that's not user friendly. 

    #[[[meshtastic]]]
